<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/uraian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:text="Rencana kerja 1"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uraian"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="Jumlah : "
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uraian"
            android:layout_toRightOf="@id/jml"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="1500"
            android:layout_marginRight="3dp" />


        <TextView
            android:id="@+id/satun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jumlah"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="Satuan : "
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/satuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jumlah"
            android:layout_toRightOf="@id/satun"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="Arif123"
            android:layout_marginRight="3dp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
